<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nouspartageons.django.nouspartageonsapp.StatusActivity">

    <include layout="@layout/activity_menu" android:id="@+id/status_bar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="69dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mon_status" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/status_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/status_input"
        android:layout_alignRight="@+id/status_input"
        android:layout_below="@+id/status_input"
        android:layout_marginTop="29dp"
        android:background="@color/colorAccent"
        android:text="@string/update" />

</RelativeLayout>
